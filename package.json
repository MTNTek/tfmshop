{
  "name": "tfmshop",
  "private": true,
  "version": "0.1.0",
  "description": "TFMshop - A modern e-commerce platform with Amazon-inspired UX and custom branding",
  "keywords": [
    "ecommerce",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "drizzle",
    "postgresql"
  ],
  "author": "TFMshop Team",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --port 3001",
    "dev:turbo": "next dev --turbo --port 3001",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start --port 3001",
    "preview": "next build && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "npm run db:push && npm run db:seed",
    "lighthouse": "npx lighthouse http://localhost:3001 --output=html --output-path=./lighthouse-report.html",
    "bundle-analyzer": "npx @next/bundle-analyzer",
    "clean": "rm -rf .next out dist",
    "deploy:build": "npm run clean && npm run validate && npm run build",
    "health-check": "node scripts/health-check.js",
    "pre-deploy-check": "node scripts/pre-deploy-check.js",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "node scripts/deploy.js --platform vercel --environment staging",
    "deploy:production": "node scripts/deploy.js --platform vercel --environment production",
    "docker:build": "docker build -t tfmshop .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "@neondatabase/serverless": "^0.7.2",
    "@next/font": "^14.0.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@types/testing-library__jest-dom": "^5.14.9",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "postgres": "^3.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "stripe": "^14.5.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.0.0",
    "@next/bundle-analyzer": "^14.0.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "commitlint": "^18.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.4",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.0.2",
    "msw": "^2.10.4",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
