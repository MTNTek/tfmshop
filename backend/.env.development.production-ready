# Development environment with production-ready settings
# This simulates production settings in a development environment

NODE_ENV=development
PORT=3000

# Database Configuration (development)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=tfmshop

# JWT Configuration (production-strength)
JWT_SECRET=super-secure-development-jwt-secret-key-at-least-32-characters-long-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=super-secure-development-refresh-secret-key-at-least-32-characters-long-2024
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Security Configuration
FORCE_HTTPS=false
TRUST_PROXY=false

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@tfmshop.local

# Redis Configuration (development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tfmshop_dev

# Performance Configuration (production-like)
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMIT=true
CACHE_DEFAULT_TTL=3600

# Rate Limiting Configuration (relaxed for development)
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_AUTH=20
RATE_LIMIT_API=500
RATE_LIMIT_UPLOAD=50
RATE_LIMIT_SEARCH=200
RATE_LIMIT_ADMIN=200

# Logging Configuration (production-like)
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=./logs

# Database Performance Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# Cache Performance Configuration
CACHE_TTL_PRODUCTS=600
CACHE_TTL_CATEGORIES=1800
CACHE_TTL_USERS=300
CACHE_TTL_SEARCH=180
CACHE_TTL_ANALYTICS=900

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000
METRICS_COLLECTION_INTERVAL=30000