{
  "name": "tfmshop-backend",
  "version": "1.0.0",
  "description": "Backend API for TFMshop e-commerce platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:production": "tsc -p tsconfig.production.json",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d ormconfig.ts",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- migration:run -d ormconfig.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ormconfig.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d ormconfig.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d ormconfig.ts",
    "seed": "ts-node src/scripts/seed.ts seed",
    "seed:clear": "ts-node src/scripts/seed.ts clear",
    "seed:reset": "ts-node src/scripts/seed.ts reset",
    "seed:performance": "ts-node src/scripts/seed.ts performance",
    "seed:full": "ts-node src/scripts/seed.ts full",
    "monitor": "ts-node src/scripts/monitor.ts check",
    "monitor:start": "ts-node src/scripts/monitor.ts start",
    "deploy:check": "ts-node src/scripts/production-deploy.ts check",
    "deploy:migrate": "ts-node src/scripts/production-deploy.ts migrate",
    "deploy:cache-warmup": "ts-node src/scripts/production-deploy.ts cache-warmup",
    "deploy:optimize": "ts-node src/scripts/production-deploy.ts optimize",
    "deploy": "ts-node src/scripts/production-deploy.ts deploy",
    "production:checklist": "ts-node src/scripts/production-checklist.ts",
    "production:startup": "ts-node src/scripts/production-startup.ts init",
    "production:check": "ts-node src/scripts/production-startup.ts check",
    "optimize": "ts-node src/scripts/performance-optimizer.ts all",
    "optimize:database": "ts-node src/scripts/performance-optimizer.ts database",
    "optimize:cache": "ts-node src/scripts/performance-optimizer.ts cache",
    "optimize:report": "ts-node src/scripts/performance-optimizer.ts report",
    "dashboard": "ts-node src/scripts/monitoring-dashboard.ts start",
    "dashboard:export": "ts-node src/scripts/monitoring-dashboard.ts export",
    "dashboard:report": "ts-node src/scripts/monitoring-dashboard.ts report",
    "test:production-readiness": "node test-production-readiness.js",
    "verify:production-readiness": "node verify-production-readiness.js",
    "deploy:production": "./deploy-production.sh"
  },
  "keywords": [
    "ecommerce",
    "api",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.5.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.16",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.21.4"
  }
}
