# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Update with your production database)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-secure-production-password
DB_DATABASE=tfmshop_production

# JWT Configuration (MUST be changed for production)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (Update with your production domain)
CORS_ORIGIN=https://your-production-domain.com,https://www.your-production-domain.com

# Security Configuration
FORCE_HTTPS=true
TRUST_PROXY=true

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/uploads/tfmshop

# Email Configuration (Update with your email service)
EMAIL_HOST=your-smtp-host
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# Redis Configuration (Update with your production Redis)
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=tfmshop_prod

# Performance Configuration (Production optimized)
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMIT=true
CACHE_DEFAULT_TTL=3600

# Rate Limiting Configuration (Stricter for production)
RATE_LIMIT_GENERAL=500     # General requests per 15 minutes
RATE_LIMIT_AUTH=5          # Auth requests per 15 minutes
RATE_LIMIT_API=300         # API requests per 15 minutes
RATE_LIMIT_UPLOAD=10       # Upload requests per hour
RATE_LIMIT_SEARCH=50       # Search requests per 5 minutes
RATE_LIMIT_ADMIN=100       # Admin requests per 15 minutes

# Logging Configuration (Production settings)
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=/var/log/tfmshop

# Database Performance Configuration
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# Cache Performance Configuration
CACHE_TTL_PRODUCTS=600     # 10 minutes
CACHE_TTL_CATEGORIES=1800  # 30 minutes
CACHE_TTL_USERS=300        # 5 minutes
CACHE_TTL_SEARCH=180       # 3 minutes
CACHE_TTL_ANALYTICS=900    # 15 minutes

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000
METRICS_COLLECTION_INTERVAL=30000

# Memory Management
NODE_OPTIONS=--max-old-space-size=4096 --max-semi-space-size=128

# API Keys (if using external services)
# VALID_API_KEYS=key1,key2,key3