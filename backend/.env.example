# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=tfmshop

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@tfmshop.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tfmshop

# Performance Configuration
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMIT=true
CACHE_DEFAULT_TTL=3600

# Rate Limiting Configuration (requests per time window)
RATE_LIMIT_GENERAL=1000    # General requests per 15 minutes
RATE_LIMIT_AUTH=10         # Auth requests per 15 minutes
RATE_LIMIT_API=500         # API requests per 15 minutes
RATE_LIMIT_UPLOAD=20       # Upload requests per hour
RATE_LIMIT_SEARCH=100      # Search requests per 5 minutes
RATE_LIMIT_ADMIN=200       # Admin requests per 15 minutes

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_DIRECTORY=./logs