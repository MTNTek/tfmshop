# Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tfmshop"
# For development with Neon (recommended)
# DATABASE_URL="postgresql://username:password@host.neon.tech/tfmshop?sslmode=require"

# Next Auth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="tfmshop-assets"

# Email (for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@tfmshop.com"

# External APIs
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Development
NODE_ENV="development"
